.home-top-box{height: 100%;position: absolute; box-sizing: border-box;text-align: center;color: white;padding-top: 50rpx;font-size: 28rpx;background: #1E91E7;width: 750rpx;overflow: hidden;}

.top-img001{position: absolute;bottom: 0;left: 0;width: 2400rpx;height: 195rpx;}
.top-img003{position: absolute;bottom: 0;right: 0;width: 2400rpx;height: 195rpx;}

.move1{position:relative;
width: 100%;
height: 195rpx;
animation:mymove1 8.2s linear infinite alternate;
-webkit-animation:mymove1 8.2s linear infinite alternate; /*Safari and Chrome*/}

@keyframes mymove1
{
from {right:0px;}
to {right:1200rpx;}
}

@-webkit-keyframes mymove1 /*Safari and Chrome*/
{
from {right:0px;}
to {right:1200rpx;}
}
.move2{position:relative;
animation:mymove2 8.2s linear infinite alternate;
width: 100%;
height: 195rpx;
-webkit-animation:mymove2 8.2s linear infinite alternate; /*Safari and Chrome*/}

@keyframes mymove2
{
from {left:0px;}
to {left:1200rpx;}
}

@-webkit-keyframes mymove2 /*Safari and Chrome*/
{
from {left:0px;}
to {left:1200rpx;}
}
