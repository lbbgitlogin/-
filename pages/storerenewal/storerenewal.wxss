.move1{position:relative;
width: 100%;
height: 100%;
animation:mymove1 8.4s linear infinite alternate;
-webkit-animation:mymove1 8.4s linear infinite alternate; /*Safari and Chrome*/}

@keyframes mymove1
{
from {right:0px;}
to {right:1200rpx;}
}

@-webkit-keyframes mymove1 /*Safari and Chrome*/
{
from {right:0px;}
to {right:1200rpx;}
}
.move2{position:relative;
