/*全部商品 start*/
.m-navbar-item {padding: 20rpx 0;font-size: 24rpx;}
.m-navbar-item:after {border: none;}
.m-navbar-item.m-navbar-item-on {background-color: #fff;color: #1E91E7;}
.m-navbar-item.m-navbar-item-on::before {content: " ";position: absolute;left: 0;bottom: 0;right: 0;height: 6rpx;border-bottom: 6rpx solid #1E91E7;color: #CCCCCC;-webkit-transform-origin: 0 100%;transform-origin: 0 100%;-webkit-transform: scaleY(0.5);transform: scaleY(0.5);z-index: 3;}
.m-productlist{padding-top:70rpx;position: absolute;box-sizing: border-box;width: 100%;height: 100%; }
.m-product-box {height:210rpx;width:538rpx;float:left;box-sizing:border-box;padding:20rpx 20rpx 20rpx  0;position:relative;}
.m-box-name{height:76rpx;overflow:hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:2;font-size: 28rpx;line-height: 38rpx;}
.m-box-price{position: absolute;top:100rpx;left: 0;color: #DB384C;font-size: 32rpx;line-height: 50rpx;}
.m-tab{position: fixed;width: 100%;top: 0;z-index: 2;}
.m-box-stock{position: absolute;bottom: 20rpx;left: 0;font-size: 24rpx;color: gray;}
.m-box-salenum{position: absolute;bottom: 20rpx;left: 200rpx;font-size: 24rpx;color: gray;}
.m-box-operate{font-size: 28rpx;color: white;border-radius: 25rpx;background: #1E91E7;padding: 0 20rpx;display: block;height: 50rpx;line-height: 50rpx;text-align: center;}
.wrapper{position: absolute;bottom: 10rpx;right: 20rpx;padding: 20rpx;}
.operator-box{position: absolute;bottom: 20rpx;right: 0;height: 120rpx;color: white;background-color: rgba(0,0,0,.8);}
.operator-item{font-size: 50rpx;text-align: center;width: 150rpx;float: right;}
.item-icon{height: 80rpx;line-height: 80rpx;}
.iconfont{font-size: 50rpx;}
.item-text{font-size: 26rpx;height: 40rpx;}
.m-sort{position: relative}
.m-sort image{width: 24rpx; height: 24rpx;position: absolute;top: 50%;margin-top: -12rpx;margin-left:2rpx;}
/*全部商品 end*/
